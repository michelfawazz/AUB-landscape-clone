  //prompt user to download as pdf on page load
  window.onload = function() {
    if (confirm("Would you like to download this plant as a PDF?")) {
      //print as pdf
      window.print();
    }
  }
</script>
    
  
    
    
    
    
    
    
        
        
        
        
    